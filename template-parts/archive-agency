			</p>

			<?php
			$taxonomies = get_terms( 'location', array('hide_empty' => 0));
			foreach ($taxonomies as $key => $value) {

				wp_reset_query();
				$args = array('post_type' => 'dai-ly',
					'tax_query' => array(
						array(
							'taxonomy' => 'location',
							'field' => 'slug',
							'terms' => $value->slug,
							),
						),
					);

				$loop = new WP_Query($args);
				if($loop->have_posts()) {
					while($loop->have_posts()) : $loop->the_post();
					echo '<a href="'.get_permalink().'">'.get_the_title().'</a>';
					endwhile;
				}
				?>

				<div class="panel panel-primary menu-right"> 
					<div class="panel-heading"> 
						<h3 class="panel-title"><?php echo $value->name?></h3> 
					</div> 
					<div class="panel-body none-padding">
						<ul class="nav menu-agency-archive">
							<?php
							$i = 0;
							$menu_nothern = wp_get_nav_menu_items('menu-left-nothern');
							foreach ($menu_nothern as $key => $value) {
								$i++;
								if($i%3 != 0){
									echo '<li><a href="'.$value->url.'">'.$value->title.'</a></li>';
								}else{
									echo '<li style="border-right:none"><a href="'.$value->url.'">'.$value->title.'</a></li>';
								}						
							}

							while ( $i%3 != 0){
								$i++;
								if($i%3 != 0){
									echo '<li><a>&nbsp;</a></li>';
								}else{
									echo '<li style="border-right:none"><a>&nbsp;</a></li>';
								}
							}
							?>
						</ul>
					</div> 
				</div>
				<?php
			}
			?>
		</div>
	</div> 
</div>




